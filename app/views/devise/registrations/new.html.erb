+<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
+<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      会員情報入力
    </h1>
  </div>

  
  <%= render 'shared/error_messages', model: f.object %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) ニックネムオ", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :encrypted_password, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">年齢</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
     <%= f.radio_button :age, 10 %>
     <%= f.label :age, "10代", {value: :male, style: "display: inline-block;"} %>
     <%= f.radio_button :age, 20 %>
     <%= f.label :age, "20代", {value: :female, style: "display: inline-block;"} %>
     <%= f.radio_button :age, 30 %>
     <%= f.label :age, "30代", {value: :female, style: "display: inline-block;"} %>
     <%= f.radio_button :age, 40 %>
     <%= f.label :age, "40代", {value: :female, style: "display: inline-block;"} %>
     <%= f.radio_button :age, 50 %>
     <%= f.label :age, "50代", {value: :female, style: "display: inline-block;"} %>
     <%= f.radio_button :age, 60 %>
     <%= f.label :age, "60代", {value: :female, style: "display: inline-block;"} %>
     <%= f.radio_button :age, 70 %>
     <%= f.label :age, "70代以上", {value: :female, style: "display: inline-block;"} %>

    </div>
    <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">性別</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-sex-wrap'>
     <%= f.radio_button :sex, "男性" %>
     <%= f.label :sex, "男性", {value: :male, style: "display: inline-block;"} %>
     <%= f.radio_button :sex, "女" %>
     <%= f.label :sex, "女性", {value: :female, style: "display: inline-block;"} %>
    </div>
  
  <div class='register-btn'>
    <%= f.submit "登録" ,class:"register-red-btn" %>

<% end %>